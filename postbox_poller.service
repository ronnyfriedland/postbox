[Unit]
Description=Postbox Poller
After=syslog.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/postbox
ExecStart=/home/pi/postbox/postbox_poller.py
SyslogIdentifier=postbox-poller
StandardOutput=syslog
StandardError=syslog
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target